---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Christopher de Beer">
	<main class="content-container">
		<header class="intro">
			<h1>Christopher de Beer</h1>
			<p class="subtitle">Citizen of the web</p>
		</header>
		
		<section class="description">
			<p>Welcome to my digital space, where I share thoughts on web development, JavaScript frameworks, and document my various projects. This site follows the design principles of Edward Tufte, emphasizing clean typography and readability.</p>
		</section>
		
		<nav class="main-nav">
			<a href="/blog/" class="nav-link">Read Articles</a>
			<a href="/projects/" class="nav-link">View Projects</a>
			<a href="/tags/" class="nav-link">Browse Topics</a>
		</nav>
	</main>
</Layout>

<style>
	.intro {
		text-align: center;
		margin-bottom: 3rem;
		border-bottom: 1px solid var(--border);
		padding-bottom: 2rem;
	}
	
	.intro h1 {
		font-size: 2.8em;
		margin-bottom: 0.5rem;
		font-weight: 400;
		color: var(--text-primary);
	}
	
	.subtitle {
		font-size: 1.2em;
		color: var(--text-secondary);
		font-style: italic;
		margin: 0;
	}
	
	.description {
		margin-bottom: 3rem;
	}
	
	.description p {
		font-size: 1.1em;
		line-height: 1.7;
		color: var(--text-primary);
	}
	
	.main-nav {
		text-align: center;
		margin-top: 2rem;
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}
	
	.nav-link {
		display: inline-block;
		padding: 0.8rem 1.8rem;
		background: var(--background-subtle);
		border: 1px solid var(--border);
		color: var(--text-primary);
		text-decoration: none;
		font-weight: 400;
		transition: all 0.2s ease;
		border-radius: 2px;
		min-width: 140px;
	}
	
	.nav-link:hover {
		background: var(--background);
		border-color: var(--accent);
		color: var(--accent);
		transform: none;
	}
	
	@media (max-width: 768px) {
		.intro h1 {
			font-size: 2.2em;
		}
		
		.subtitle {
			font-size: 1.1em;
		}
		
		.description p {
			font-size: 1em;
		}
	}
</style>