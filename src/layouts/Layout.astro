---
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Christopher de Beer - Citizen of the web" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/eruda/3.0.1/eruda.min.js" onload="eruda.init()"></script>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		/* Tufte-inspired color palette - clean and understated */
		--text-primary: #111111;
		--text-secondary: #666666;
		--text-tertiary: #999999;
		--background: #fffffe;
		--background-subtle: #fafafa;
		--border: #e6e6e6;
		--border-light: #f0f0f0;
		--accent: #0066cc;
		--accent-hover: #0052a3;
	}
	
	html {
		/* Tufte-style serif typography for optimal reading */
		font-family: 'Georgia', 'Times New Roman', 'DejaVu Serif', serif;
		background: var(--background);
		color: var(--text-primary);
		line-height: 1.6;
		font-size: 18px;
		/* Improved text rendering */
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}
	
	body {
		margin: 0;
		padding: 0;
	}
	
	/* Typography hierarchy following Tufte principles */
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Georgia', serif;
		font-weight: 400;
		margin-top: 1.6em;
		margin-bottom: 0.6em;
		line-height: 1.2;
		color: var(--text-primary);
	}
	
	h1 {
		font-size: 2.2em;
		margin-top: 0;
	}
	
	h2 {
		font-size: 1.7em;
	}
	
	h3 {
		font-size: 1.3em;
	}
	
	p {
		margin-bottom: 1.3em;
		hyphens: auto;
		-webkit-hyphens: auto;
		-ms-hyphens: auto;
	}
	
	/* Clean monospace font stack for code */
	code {
		font-family: 'Monaco', 'Menlo', 'Consolas', 'Liberation Mono', 'Courier New', monospace;
		font-size: 0.9em;
		background: var(--background-subtle);
		padding: 0.1em 0.3em;
		border-radius: 3px;
	}
	
	/* Links with subtle underlines */
	a {
		color: var(--accent);
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: border-color 0.15s ease;
	}
	
	a:hover {
		border-bottom-color: var(--accent);
	}
	
	/* Optimal reading width - Tufte's 45-75 characters per line */
	.content-container {
		max-width: 65ch;
		margin: 0 auto;
		padding: 2rem 1rem;
	}
	
	@media (max-width: 768px) {
		html {
			font-size: 16px;
		}
		
		.content-container {
			padding: 1rem;
		}
	}
</style>